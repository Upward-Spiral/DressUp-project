
<script src="/javascripts/script.js"></script>
<div>
    <img src="/{{this.image}}" alt="">
</div>
<div id="shared_outfit_thumb_framework">
    <div class="framework_inside">
        <h4 id="H4">{{this.firstname}} {{this.lastname}}</h4>
        <div class="add-friend-btn" id="{{this._id}}" onclick="addFriend(this)">
            <img src="/images/add_btn.png" alt="">
        </div>
    </div>
</div>

<script type="text/javascript">
    function addFriend (element) {
     let friendId = element.id;   
    axios.get(`/user/add-friend/${friendId}`)
        .then((response)=> {
            // handle success
            if (response) {
                element.innerHTML = '<img src="" alt="" >'
            }
            console.log(response);
        })
        .catch(function (error) {
            // handle error
            console.log(error);
        })
        .then(function () {
            // always executed
        });
}
</script>