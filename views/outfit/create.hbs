{{!-- Create New Outfit --}}
<form action="/outfit/create" method="post" enctype="multipart/form-data">

    <label for="outfit-img">Choose an image</label>
    <input type="file" name="outfit-img" />

    <label for="title">title</label>
    <input type="text" name="title" placeholder="This better be unique">
    <label for="occasion">Occasion</label>
    <select name="occasion" id="outfit-occasion">
        <option value="Party">Party</option>
        <option value="Work">Work</option>
        <option value="Funeral">Funeral</option>
        <option value="Dinner">Dinner</option>
        <option value="Date">Date</option>
        <option value="Workout">Workout</option>
    </select>
    <label for="description">Description</label>
    <input type="text" name="description" placeholder="write something about this outfit">
    <button type="submit" formmethod="POST" id="">Create</button>
</form>

