{{>nav}}

<div id="top-image">
    <img src="/{{outfit.image}}" alt="" class="outfit-feed-img">
    </div>
<div id="outfit-feed-info">
    <div id="outfit-feed-description">
        <h3>{{outfit.title}}</h3>
        <div class="desc-frame">
                <h4>Occasion: </h4>
                <p> {{outfit.occasion}}</p>
        </div>
    </div>

    {{#if outfit.shared}}
            <div><a href="/outfit/unshare/{{outfit._id}}"><img src="/../images/icon_unshare.png" alt="Unshare" class="outfit-feed-icon-unshare"></a></div>
        {{else}}
            <div><a href="/outfit/share/{{outfit._id}}"><img src="/../images/icon_share.png" alt="Share" class="outfit-feed-icon-share"></a></div>
    {{/if}}
</div>
    


<div class="item-list">
    {{#each outfit.liked_by}}
        {{> outfit_feed_user_thumb}}   
        {{/each}} 
</div>