


<h1>Hi {{user.username}}! this is your profile!</h1>
<div>
    <img src="/images/{{user.image}}" alt="">
    
</div>
<form action="/user/update" method="post" enctype="multipart/form-data">

    <label for="user-img">Upload new image</label>
    <input type="file" name="user-img" />

    <label for="firstname">Firstname: </label>
    <input type="text" name="firstname" value="{{user.firstname}}" placeholder={{user.firstname}}><br>
    <label for="lastname">Lastname: </label>
    <input type="text" name="lastname" value="{{user.lastname}}" placeholder="{{user.lastname}}"><br>
    <button type="submit">Save Changes</button>
</form>



