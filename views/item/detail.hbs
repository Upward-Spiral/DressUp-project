{{>nav}}
{{> side_menu}}
{{> sidemenu_open_btn}}

<div id="top-image">
    <img src="/images/{{item.image}}" alt="" class="outfit-feed-img">
</div>
<div id="description">
    <div>
        <h2 class="title">{{item.title}}</h2>
        <h5 class="sub-title">Brand: {{item.brand}}</h5>
        <h5 class="sub-title">Material: {{item.material}}</h5>
        <h5 class="sub-title">Occasion: {{item.occasion}}</h5>
    </div>

    <div id="icon-div">
        <a href="/item/update/{{item._id}}"><img src="/images/icon_update.png" alt="Update"
                class="outfit-feed-icons"></a>
        <a href="/item/delete/{{item._id}}"><img src="/images/delete_bin.png" alt="Delete"
                class="outfit-feed-icons"></a>
    </div>
        <a href="/outfit/list"><img src="/images/back_btn.png" alt="Back" class="back-btn"></a>
        <div id="green-plus-btn">
            <a href="/item/create">
                <img src="/images/add_btn.png" alt="Create new item" id="create-btn">
            </a>
        </div>
</div>
